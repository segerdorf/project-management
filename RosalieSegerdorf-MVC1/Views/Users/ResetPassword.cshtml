@model RosalieSegerdorf_MVC1.ViewModels.User.ResetPassword

@{
    ViewBag.Title = "Reset Password";
}

<h2>Reset Password</h2>
<hr/>

@using (Html.BeginForm("ResetPassword", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(m => m.CurrentPassword, new { @class = "control-label col-sm-3", @for = "currentPassword" })
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", @id = "currentPassword" })
                @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
                @Html.ValidationMessage("incorrectPassword", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-3", @for = "password" })
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-sm-3", @for = "confirmPassword" })
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "confirmPassword" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

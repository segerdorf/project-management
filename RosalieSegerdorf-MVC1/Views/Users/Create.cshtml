                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartOfEmployment, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.StartOfEmployment, new { htmlAttributes = new { @class = "form-control date-picker", PlaceHolder = DateTime.Now.Date} })
                @Html.ValidationMessageFor(model => model.StartOfEmployment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsProjectLeader, htmlAttributes: new { @class = "control-label col-xs-3 col-sm-2" })
            <div class="col-xs-9 col-sm-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsProjectLeader)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsAdmin, htmlAttributes: new { @class = "control-label col-xs-3 col-sm-2" })
            <div class="col-xs-9 col-sm-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsAdmin)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index")">Back to employees</a>
</div>
